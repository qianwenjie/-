<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>标准录入 - 考试系统</title>

  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- FontAwesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <!-- TailwindCSS 自定义配置 -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#E6F9F0', 100: '#B3EDCE', 200: '#80E0AD', 300: '#4DD48B',
              400: '#1AC76A', 500: '#00B96B', 600: '#00A35C', 700: '#008A4D',
              800: '#00703E', 900: '#00572F',
            },
            success: { 50: '#E8FFEA', 500: '#00B42A', 600: '#009A24' },
            warning: { 50: '#FFF7E8', 500: '#FF7D00', 600: '#D66A00' },
            error: { 50: '#FFECE8', 500: '#F53F3F', 600: '#CB2634' },
            info: { 50: '#E8F7FF', 500: '#14C9C9', 600: '#0EAAAA' },
          }
        }
      }
    }
  </script>

  <style>
    .editor-content:empty:before {
      content: attr(data-placeholder);
      color: #9CA3AF;
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <!-- 顶部导航栏 -->
    <header class="h-16 bg-white border-b border-gray-200 fixed top-0 left-0 right-0 z-50">
      <div class="flex items-center justify-between h-full px-6">
        <div class="flex items-center space-x-4">
          <button id="sidebarToggle" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors">
            <i class="fas fa-bars"></i>
          </button>
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-primary-500 rounded flex items-center justify-center">
              <i class="fas fa-graduation-cap text-white"></i>
            </div>
            <span class="text-xl font-semibold text-gray-900">考试系统</span>
          </div>
          <nav class="hidden md:flex items-center space-x-2 text-sm text-gray-600">
            <a href="#" class="hover:text-primary-500">首页</a>
            <i class="fas fa-chevron-right text-xs text-gray-400"></i>
            <a href="#" class="hover:text-primary-500">题库管理</a>
            <i class="fas fa-chevron-right text-xs text-gray-400"></i>
            <span class="text-gray-900 font-medium">标准录入</span>
          </nav>
        </div>
        <div class="flex items-center space-x-4">
          <button class="relative w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded">
            <i class="fas fa-bell"></i>
          </button>
          <div class="flex items-center space-x-2">
            <img src="https://via.placeholder.com/32" alt="用户头像" class="w-8 h-8 rounded-full">
            <span class="text-sm text-gray-700 font-medium">管理员</span>
          </div>
        </div>
      </div>
    </header>

    <!-- 侧边栏 -->
    <aside id="sidebar" class="w-64 bg-white border-r border-gray-200 fixed top-16 left-0 bottom-0 overflow-y-auto transition-all duration-300">
      <nav class="p-4">
        <a href="#" class="flex items-center space-x-3 px-3 py-2 rounded text-sm font-medium text-gray-700 hover:bg-primary-50 hover:text-primary-600">
          <i class="fas fa-home w-5"></i>
          <span class="sidebar-text">首页</span>
        </a>
        <div class="mt-2">
          <button class="w-full flex items-center justify-between px-3 py-2 rounded text-sm font-medium bg-primary-50 text-primary-600">
            <div class="flex items-center space-x-3">
              <i class="fas fa-book w-5"></i>
              <span class="sidebar-text">题库管理</span>
            </div>
            <i class="fas fa-chevron-down text-xs sidebar-text"></i>
          </button>
          <div class="ml-8 mt-1 space-y-1">
            <a href="list.html" class="block px-3 py-1.5 rounded text-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50">题目列表</a>
            <a href="#" class="block px-3 py-1.5 rounded text-sm text-primary-600 bg-primary-50 font-medium">标准录入</a>
            <a href="#" class="block px-3 py-1.5 rounded text-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50">简便录入</a>
            <a href="#" class="block px-3 py-1.5 rounded text-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50">AI出题</a>
          </div>
        </div>
      </nav>
    </aside>

    <!-- 主内容区 -->
    <main id="mainContent" class="ml-64 pt-16 min-h-screen transition-all duration-300">
      <div class="p-6">
        <!-- 页面标题区 -->
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-4">
            <button onclick="history.back()" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded">
              <i class="fas fa-arrow-left"></i>
            </button>
            <div>
              <h1 class="text-2xl font-semibold text-gray-900">标准录入</h1>
              <p class="mt-1 text-sm text-gray-500">结构化表单录入题目</p>
            </div>
          </div>
        </div>

        <!-- 步骤条 -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 mb-6">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2 flex-1">
              <div id="step1" class="step-item active flex items-center">
                <div class="step-circle w-8 h-8 rounded-full bg-primary-500 text-white flex items-center justify-center font-medium text-sm">1</div>
                <span class="step-text ml-2 text-sm font-medium text-primary-600">基础信息</span>
              </div>
              <div class="step-line flex-1 h-0.5 bg-gray-200 mx-4"></div>
            </div>

            <div class="flex items-center space-x-2 flex-1">
              <div id="step2" class="step-item flex items-center">
                <div class="step-circle w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center font-medium text-sm">2</div>
                <span class="step-text ml-2 text-sm font-medium text-gray-500">题目内容</span>
              </div>
              <div class="step-line flex-1 h-0.5 bg-gray-200 mx-4"></div>
            </div>

            <div class="flex items-center space-x-2">
              <div id="step3" class="step-item flex items-center">
                <div class="step-circle w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center font-medium text-sm">3</div>
                <span class="step-text ml-2 text-sm font-medium text-gray-500">预览确认</span>
              </div>
            </div>
          </div>
        </div>

        <!-- 表单区域 -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
          <!-- 步骤1: 基础信息 -->
          <div id="formStep1" class="step-content">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">基础信息</h3>

            <div class="space-y-6">
              <!-- 题型选择 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">题型 <span class="text-error-500">*</span></label>
                <div class="grid grid-cols-5 gap-3">
                  <button type="button" onclick="selectQuestionType('single')" class="question-type-btn px-4 py-2 border-2 border-primary-500 bg-primary-50 text-primary-600 rounded font-medium text-sm">单选题</button>
                  <button type="button" onclick="selectQuestionType('multiple')" class="question-type-btn px-4 py-2 border-2 border-gray-200 text-gray-700 rounded font-medium text-sm hover:border-primary-500 hover:bg-primary-50">多选题</button>
                  <button type="button" onclick="selectQuestionType('judge')" class="question-type-btn px-4 py-2 border-2 border-gray-200 text-gray-700 rounded font-medium text-sm hover:border-primary-500 hover:bg-primary-50">判断题</button>
                  <button type="button" onclick="selectQuestionType('fill')" class="question-type-btn px-4 py-2 border-2 border-gray-200 text-gray-700 rounded font-medium text-sm hover:border-primary-500 hover:bg-primary-50">填空题</button>
                  <button type="button" onclick="selectQuestionType('essay')" class="question-type-btn px-4 py-2 border-2 border-gray-200 text-gray-700 rounded font-medium text-sm hover:border-primary-500 hover:bg-primary-50">简答题</button>
                </div>
              </div>

              <!-- 知识点关联 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">知识点 <span class="text-error-500">*</span></label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                  <option value="">请选择知识点</option>
                  <option value="1">计算机基础</option>
                  <option value="2">数学基础</option>
                  <option value="3">英语基础</option>
                  <option value="4">语文基础</option>
                </select>
              </div>

              <!-- 难度等级 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">难度等级 <span class="text-error-500">*</span></label>
                <div class="flex items-center space-x-6">
                  <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="difficulty" value="1" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300" checked>
                    <span class="ml-2 text-sm text-gray-700">一级</span>
                  </label>
                  <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="difficulty" value="2" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300">
                    <span class="ml-2 text-sm text-gray-700">二级</span>
                  </label>
                  <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="difficulty" value="3" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300">
                    <span class="ml-2 text-sm text-gray-700">三级</span>
                  </label>
                  <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="difficulty" value="4" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300">
                    <span class="ml-2 text-sm text-gray-700">四级</span>
                  </label>
                  <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="difficulty" value="5" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300">
                    <span class="ml-2 text-sm text-gray-700">五级</span>
                  </label>
                </div>
              </div>

              <!-- 分值设置 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">分值 <span class="text-error-500">*</span></label>
                <input type="number" class="w-full md:w-64 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="请输入分值" value="5" min="1">
                <p class="mt-1 text-xs text-gray-500">建议范围: 1-100分</p>
              </div>
            </div>
          </div>

          <!-- 步骤2: 题目内容 -->
          <div id="formStep2" class="step-content hidden">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">题目内容</h3>

            <div class="space-y-6">
              <!-- 题干编辑器 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">题干 <span class="text-error-500">*</span></label>
                <div class="rich-editor border border-gray-300 rounded overflow-hidden">
                  <div class="editor-toolbar bg-gray-50 border-b border-gray-200 p-2 flex items-center space-x-1">
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="加粗">
                      <i class="fas fa-bold"></i>
                    </button>
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="斜体">
                      <i class="fas fa-italic"></i>
                    </button>
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="下划线">
                      <i class="fas fa-underline"></i>
                    </button>
                    <div class="w-px h-5 bg-gray-300 mx-1"></div>
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="插入图片">
                      <i class="fas fa-image"></i>
                    </button>
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="插入公式">
                      <i class="fas fa-function"></i>
                    </button>
                  </div>
                  <div class="editor-content min-h-[120px] p-4 focus:outline-none focus:ring-2 focus:ring-primary-500" contenteditable="true" data-placeholder="请输入题干内容..."></div>
                </div>
              </div>

              <!-- 选项管理区 (根据题型动态显示) -->
              <div id="optionsArea">
                <!-- 单选/多选题选项 -->
                <div id="choiceOptions" class="choice-options">
                  <label class="block text-sm font-medium text-gray-700 mb-2">选项 <span class="text-error-500">*</span></label>
                  <div id="optionsList" class="space-y-3">
                    <!-- 选项将通过JavaScript动态生成 -->
                  </div>
                  <button type="button" onclick="addOption()" class="mt-3 text-primary-500 hover:text-primary-600 text-sm font-medium">
                    <i class="fas fa-plus mr-1"></i> 添加选项
                  </button>
                </div>

                <!-- 判断题选项 -->
                <div id="judgeOptions" class="judge-options hidden">
                  <label class="block text-sm font-medium text-gray-700 mb-2">正确答案 <span class="text-error-500">*</span></label>
                  <div class="flex items-center space-x-6">
                    <label class="inline-flex items-center cursor-pointer">
                      <input type="radio" name="judgeAnswer" value="true" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300" checked>
                      <span class="ml-2 text-sm text-gray-700">正确</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                      <input type="radio" name="judgeAnswer" value="false" class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300">
                      <span class="ml-2 text-sm text-gray-700">错误</span>
                    </label>
                  </div>
                </div>

                <!-- 填空题答案 -->
                <div id="fillOptions" class="fill-options hidden">
                  <label class="block text-sm font-medium text-gray-700 mb-2">填空答案 <span class="text-error-500">*</span></label>
                  <p class="text-xs text-gray-500 mb-3">在题干中使用 ____ 标记空位，然后在下方填写对应答案</p>
                  <div id="fillAnswersList" class="space-y-2">
                    <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500" placeholder="第1空答案">
                  </div>
                  <button type="button" onclick="addFillBlank()" class="mt-2 text-primary-500 hover:text-primary-600 text-sm font-medium">
                    <i class="fas fa-plus mr-1"></i> 添加空位
                  </button>
                </div>

                <!-- 简答题参考答案 -->
                <div id="essayOptions" class="essay-options hidden">
                  <label class="block text-sm font-medium text-gray-700 mb-2">参考答案</label>
                  <textarea class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500 min-h-[100px]" placeholder="请输入参考答案..."></textarea>
                </div>
              </div>

              <!-- 解析编辑器 -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">解析</label>
                <div class="rich-editor border border-gray-300 rounded overflow-hidden">
                  <div class="editor-toolbar bg-gray-50 border-b border-gray-200 p-2 flex items-center space-x-1">
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="加粗">
                      <i class="fas fa-bold"></i>
                    </button>
                    <button type="button" class="w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-200 rounded" title="斜体">
                      <i class="fas fa-italic"></i>
                    </button>
                  </div>
                  <div class="editor-content min-h-[100px] p-4 focus:outline-none focus:ring-2 focus:ring-primary-500" contenteditable="true" data-placeholder="请输入题目解析..."></div>
                </div>
              </div>
            </div>
          </div>

          <!-- 步骤3: 预览确认 -->
          <div id="formStep3" class="step-content hidden">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">预览确认</h3>
            <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
              <p class="text-sm text-gray-600 text-center py-8">题目预览内容将在此处显示</p>
            </div>
          </div>

          <!-- 表单操作按钮 -->
          <div class="flex items-center justify-between mt-8 pt-6 border-t border-gray-200">
            <button type="button" id="prevBtn" onclick="prevStep()" class="bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 px-6 py-2 rounded font-medium text-sm hidden">
              上一步
            </button>
            <div class="flex items-center space-x-3 ml-auto">
              <button type="button" class="bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 px-6 py-2 rounded font-medium text-sm">
                保存草稿
              </button>
              <button type="button" id="nextBtn" onclick="nextStep()" class="bg-primary-500 hover:bg-primary-600 text-white px-6 py-2 rounded font-medium text-sm">
                下一步
              </button>
              <button type="button" id="submitBtn" onclick="submitForm()" class="bg-primary-500 hover:bg-primary-600 text-white px-6 py-2 rounded font-medium text-sm hidden">
                提交
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- JavaScript -->
  <script>
    let currentStep = 1;
    let currentQuestionType = 'single';
    let optionCount = 4;

    // 初始化选项
    function initOptions() {
      const optionsList = document.getElementById('optionsList');
      optionsList.innerHTML = '';
      for (let i = 0; i < optionCount; i++) {
        addOptionHTML(i);
      }
    }

    // 添加选项HTML
    function addOptionHTML(index) {
      const optionsList = document.getElementById('optionsList');
      const optionDiv = document.createElement('div');
      optionDiv.className = 'flex items-center space-x-3';
      optionDiv.innerHTML = `
        <input type="${currentQuestionType === 'single' ? 'radio' : 'checkbox'}"
               name="correctAnswer"
               class="w-4 h-4 text-primary-500 focus:ring-primary-500 border-gray-300">
        <span class="text-sm font-medium text-gray-700 w-8">${String.fromCharCode(65 + index)}.</span>
        <input type="text"
               class="flex-1 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500"
               placeholder="请输入选项内容">
        ${index >= 2 ? `<button type="button" onclick="removeOption(this)" class="text-error-500 hover:text-error-600"><i class="fas fa-times"></i></button>` : '<div class="w-5"></div>'}
      `;
      optionsList.appendChild(optionDiv);
    }

    // 添加选项
    function addOption() {
      if (optionCount >= 10) {
        alert('最多添加10个选项');
        return;
      }
      addOptionHTML(optionCount);
      optionCount++;
    }

    // 删除选项
    function removeOption(btn) {
      btn.parentElement.remove();
      optionCount--;
      // 重新标记选项字母
      const options = document.querySelectorAll('#optionsList > div');
      options.forEach((opt, i) => {
        opt.querySelector('span').textContent = String.fromCharCode(65 + i) + '.';
      });
    }

    // 添加填空位
    function addFillBlank() {
      const fillAnswersList = document.getElementById('fillAnswersList');
      const count = fillAnswersList.children.length + 1;
      const input = document.createElement('input');
      input.type = 'text';
      input.className = 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500';
      input.placeholder = `第${count}空答案`;
      fillAnswersList.appendChild(input);
    }

    // 选择题型
    function selectQuestionType(type) {
      currentQuestionType = type;

      // 更新按钮样式
      document.querySelectorAll('.question-type-btn').forEach(btn => {
        btn.className = 'question-type-btn px-4 py-2 border-2 border-gray-200 text-gray-700 rounded font-medium text-sm hover:border-primary-500 hover:bg-primary-50';
      });
      event.target.className = 'question-type-btn px-4 py-2 border-2 border-primary-500 bg-primary-50 text-primary-600 rounded font-medium text-sm';

      // 显示对应的选项区域
      document.querySelectorAll('#optionsArea > div').forEach(el => el.classList.add('hidden'));

      if (type === 'single' || type === 'multiple') {
        document.getElementById('choiceOptions').classList.remove('hidden');
        optionCount = 4;
        initOptions();
      } else if (type === 'judge') {
        document.getElementById('judgeOptions').classList.remove('hidden');
      } else if (type === 'fill') {
        document.getElementById('fillOptions').classList.remove('hidden');
      } else if (type === 'essay') {
        document.getElementById('essayOptions').classList.remove('hidden');
      }
    }

    // 下一步
    function nextStep() {
      if (currentStep < 3) {
        currentStep++;
        updateSteps();
      }
    }

    // 上一步
    function prevStep() {
      if (currentStep > 1) {
        currentStep--;
        updateSteps();
      }
    }

    // 更新步骤显示
    function updateSteps() {
      // 更新步骤条
      for (let i = 1; i <= 3; i++) {
        const step = document.getElementById(`step${i}`);
        const circle = step.querySelector('.step-circle');
        const text = step.querySelector('.step-text');

        if (i < currentStep) {
          circle.className = 'step-circle w-8 h-8 rounded-full bg-primary-500 text-white flex items-center justify-center font-medium text-sm';
          circle.innerHTML = '<i class="fas fa-check"></i>';
          text.className = 'step-text ml-2 text-sm font-medium text-primary-600';
        } else if (i === currentStep) {
          circle.className = 'step-circle w-8 h-8 rounded-full bg-primary-500 text-white flex items-center justify-center font-medium text-sm';
          circle.textContent = i;
          text.className = 'step-text ml-2 text-sm font-medium text-primary-600';
        } else {
          circle.className = 'step-circle w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center font-medium text-sm';
          circle.textContent = i;
          text.className = 'step-text ml-2 text-sm font-medium text-gray-500';
        }
      }

      // 更新表单内容显示
      document.querySelectorAll('.step-content').forEach(el => el.classList.add('hidden'));
      document.getElementById(`formStep${currentStep}`).classList.remove('hidden');

      // 更新按钮显示
      const prevBtn = document.getElementById('prevBtn');
      const nextBtn = document.getElementById('nextBtn');
      const submitBtn = document.getElementById('submitBtn');

      if (currentStep === 1) {
        prevBtn.classList.add('hidden');
        nextBtn.classList.remove('hidden');
        submitBtn.classList.add('hidden');
      } else if (currentStep === 2) {
        prevBtn.classList.remove('hidden');
        nextBtn.classList.remove('hidden');
        submitBtn.classList.add('hidden');
      } else if (currentStep === 3) {
        prevBtn.classList.remove('hidden');
        nextBtn.classList.add('hidden');
        submitBtn.classList.remove('hidden');
      }
    }

    // 提交表单
    function submitForm() {
      alert('题目已提交!');
      window.location.href = 'list.html';
    }

    // 侧边栏折叠
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');

    sidebarToggle.addEventListener('click', () => {
      sidebar.classList.toggle('w-64');
      sidebar.classList.toggle('w-20');
      mainContent.classList.toggle('ml-64');
      mainContent.classList.toggle('ml-20');
      document.querySelectorAll('.sidebar-text').forEach(el => el.classList.toggle('hidden'));
    });

    // 初始化
    initOptions();
  </script>
  <!-- iframe嵌入检测脚本 -->
  <script>
  (function() {
    function isInIframe() {
      try {
        return window.self !== window.top;
      } catch (e) {
        return true;
      }
    }
    function hasEmbeddedParam() {
      return window.location.search.includes("embedded=true");
    }
    if (isInIframe() || hasEmbeddedParam()) {
      const style = document.createElement("style");
      style.textContent = `
        header { display: none !important; }
        .pt-16 { padding-top: 0 !important; }
        button[onclick*="history.back"] { display: none !important; }
      `;
      document.head.appendChild(style);
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", hideElements);
      } else {
        hideElements();
      }
      function hideElements() {
        const headers = document.querySelectorAll("header");
        headers.forEach(h => h.style.display = "none");
        const ptElements = document.querySelectorAll(".pt-16");
        ptElements.forEach(el => {
          el.classList.remove("pt-16");
          el.style.paddingTop = "0";
        });
        const backButtons = document.querySelectorAll("button[onclick*="history.back"]");
        backButtons.forEach(btn => btn.style.display = "none");
      }
    }
  })();
  </script>

</body>
